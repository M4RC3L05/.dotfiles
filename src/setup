#!/usr/bin/env sh

set -e

# shellcheck source=/dev/null
. "$(dirname "$0")"/utils.sh

if [ "$(id -u)" -eq 0 ]; then
  log_error "This script cannot be run as root. It will call sudo as needed"
  exit 1
fi

# shellcheck source=/dev/null
. "$(dirname "$0")"/setup-os
# shellcheck source=/dev/null
. "$(dirname "$0")"/setup-user

log_success "All done, restart your computer."
