#!/usr/bin/env sh

set -e

DRA_PACKAGES="$(cat "$HOME"/.dotfiles/src/packages/dra-packages)"

(
  set -x
  mise upgrade --bump --cd "$HOME"
)

if [ -n "$DRA_PACKAGES" ]; then
  echo "$DRA_PACKAGES" | while read -r package; do
    (
      set -x
      dra download $package
    )
  done
fi

(
  set -x
  fish -c "fish_update_completions"
)
