#!/usr/bin/env sh

EXEC_NAME="$(basename "$0")"
DOTFILES_DIR="$HOME/.dotfiles"
DOTFILES_HOME_DIR="$DOTFILES_DIR/home"

usage() {
  echo "dots"
  echo ""
  echo "Dotfiles manager"
  echo ""
  echo "Usage: $EXEC_NAME [COMMAND]"
  echo ""
  echo "Commands:"
  echo "  diff           Diffs the dotfiles home files with the ~/ files"
  echo "  adopt          Adopts changes from ~/ files to dotfiles home files"
  echo "  apply          Apply changes from dotfiles home files to ~/ files"
  echo "  help           Show this help message"
}

usage_adopt() {
  echo "dots"
  echo ""
  echo "Dotfiles manager"
  echo ""
  echo "Usage: $EXEC_NAME adopt [path]"
  echo ""
  echo "Arguments:"
  echo "  path  (optional)  The path do adopt. It can be a prevously adopted file/directory or not."
  echo "                    If no path provided, all files in dotfiles home directory that exists on ~/ will be adopted."
  echo "                    The path provided must be a valid path in the user's home directory"
}

usage_apply() {
  echo "dots"
  echo ""
  echo "Dotfiles manager"
  echo ""
  echo "Usage: $EXEC_NAME apply [path]"
  echo ""
  echo "Arguments:"
  echo "  path (optional)   The path do apply."
  echo "                    If no path provided, all files in dotfiles home directory that exists on ~/ will be applyed."
  echo "                    The path provided must be a valid path in the user's dotfiles home directory"
}

recreate_file() {
  from="$1"
  to="$2"
  destination_folder_path="$(dirname "$to")"

  (PS4="  $ " set -x; mkdir -p "$destination_folder_path")
  (PS4="  $ " set -x; rm -f "$to")
  (PS4="  $ " set -x; cp "$from" "$to")
}

command_diff() {
  find "$DOTFILES_HOME_DIR" -type f | while read -r file; do
    from="$file"
    to="$(echo "$from" | sed "s#$DOTFILES_HOME_DIR#$HOME#")"

    if [ ! -f "$to" ]; then
      echo ">> File \"$to\" does not exists, skipping..."
      continue
    fi

    echo "Diffing $from with $to"
    if diff -q "$from" "$to" > /dev/null; then
      echo "  >> No differences found"
    else
      echo "  >> Diferences found:"
      (PS4="  $ " set -x; diff -u "$from" "$to" | diff-so-fancy)
    fi
  done
}

command_adopt() {
  search_path="$(realpath --canonicalize-existing --quiet "$1")"

  if [ -n "$1" ]; then
    if [ ! -e "$search_path" ] || [ "${search_path#"$HOME"}" = "$search_path" ]; then
      usage_adopt
      exit 1
    fi
  else
    search_path="$DOTFILES_HOME_DIR"
  fi

  find "$search_path" -type f | while read -r file; do
    from="$file"

    if [ "$search_path" = "$DOTFILES_HOME_DIR" ]; then
      # Copy from ~/ folder to dotfiles home
      from="$(echo "$file" | sed "s#$DOTFILES_HOME_DIR#$HOME#")"
      to="$file"
    else
      # Copy from dotfiles home folder to ~/
      to="$(echo "$file" | sed "s#$HOME#$DOTFILES_HOME_DIR#")"
    fi

    if [ ! -f "$from" ]; then
      echo "File \"$from\" does not exists, skipping..."
      continue
    fi

    echo "Adopting: $from to $to"
    recreate_file "$from" "$to"
  done
}

command_apply() {
  search_path="$(realpath --canonicalize-existing --quiet "$1")"

  if [ -n "$1" ]; then
    if [ ! -e "$search_path" ] || [ "${search_path#"$DOTFILES_HOME_DIR"}" = "$search_path" ]; then
      usage_apply
      exit 1
    fi
  else
    search_path="$DOTFILES_HOME_DIR"
  fi

  find "$search_path" -type f | while read -r file; do
    from="$file"
    to="$(echo "$from" | sed "s#$DOTFILES_HOME_DIR#$HOME#")"
    destination_folder_path="$(dirname "$to")"

    echo "Applying: $from to $to"
    recreate_file "$from" "$to"
  done
}

main() {
  command="$1"

  case "$command" in
    diff)
      command_diff
    ;;
    adopt)
      shift 1
      command_adopt "$@"
    ;;
    apply)
      shift 1
      command_apply "$@"
    ;;
    *)
      usage
      exit 1
    ;;
  esac

}

main "$@"
